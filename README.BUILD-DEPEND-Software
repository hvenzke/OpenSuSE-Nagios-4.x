# zypper  install gd fontconfig-devel libjpeg-devel libpng-devel gd-devel perl-GD

 zypper  install  perl-DBD-MySQL libmysqlclient-devel libmysqlclient18 libmysqlclient_r18 libopenssl-devel

 zypper in php5-devel php5 php-mysql php-gd php-ldap php-xml php-mbstring php5-gettext php5-pear php5-suhosin
 zypper in php5-pear-DB php5-pear-Log php5-pear-Date php5-pear-File php5-pear-phpunit


 zyper install rrdtool perl-rrdtool

 zypper in perl-DBI perl-DBD-MySQL perl-Config-IniFiles perl-Crypt-DES perl-Digest-SHA1 perl-Digest-HMAC net-snmp-utils perl-Socket6 perl-IO-Socket-INET6 net-snmp net-snmp-libs php-snmp dmidecode  lm_sensors perl-Net-SNMP net-snmp-perl


zypper in fping cpp gcc gcc-c++ libstdc++ glib2-devel flex bison automake autoconf libtool byacc gettext textinfo

zypper in gawk sed patch diffutils

zypper in rpm-devel rpmrebuild rpmlint nagios-rpm-macros

mkdir -p /var/tmp/OpenSuSE-Nagios-4.x/SOURCES
cp get_oss13.1-nagios-srpm.sh /var/tmp/OpenSuSE-Nagios-4.x
cd  /var/tmp/OpenSuSE-Nagios-4.x/SOUCRES

  sh get_oss13.1-nagios-srpm.sh 

rpm -i ...src.rpm 



